nav.navbar.navbar-light.navbar-expand-md.navigation-clean-button
    .container
        a.navbar-brand(href='https://anelen.co', target="_self")=theme.title
        button.navbar-toggler(data-toggle="collapse", data-target="#navcol-1")
            span.sr-only Toggle navigation
            span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navcol-1")
            ul.nav.navbar-nav.mr-auto
                - var current_url = _.isUndefined(page.current_url) ? page.path.match(/(.+)\//)[0] : page.current_url
                - var re = /^(http|https):\/\/*/gi;
                - var tar = re.test(value) ? "_self" : "_self"
                li.nav-item(dropdown)
                    a.dropdown-toggle.nav-link(data-toggle="dropdown", aria-expanded="false" href="#")
                      span Services
                    div.dropdown-menu(role="menu", style="left:auto")
                      each value, key in theme.services
                        a.dropdown-item(role="presentation", href=url_for(value) target=tar)
                          != __(key)
                each value, key in theme.menu
                    li.nav-item(role="presentation")
                        - var re = /^(http|https):\/\/*/gi;
                        - var tar = re.test(value) ? "_self" : "_self"
                        // - var tar = re.test(value) ? "_blank" : "_self"
                        - var act = !re.test(value) && "/" + current_url === value
                        a.nav-link(class={active: act} href=url_for(value) target=tar)
                            != __(key)
